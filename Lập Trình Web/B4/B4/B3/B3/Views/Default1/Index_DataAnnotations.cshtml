@model B3.Models.Informaton1
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Core CSS - Include with every page -->
    <link href="/Assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Assets/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- Page-Level Plugin CSS - Forms -->
    <!-- SB Admin CSS - Include with every page -->
    <link href="/Assets/css/sb-admin.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>



    @using (Html.BeginForm("Index", "Default1", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">ENTER INFORMATION TO REGIST AN COURSE</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Identificate Information
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <form role="form">
                                        <div class="form-group">
                                            <label>Full Name</label>
                                            @*<input class="form-control" type="text" name="FullName">*@
                                            @Html.TextBoxFor(model => model.FullName, new
                                   {
                                       @class = "form-control",
                                       placeHolder = "nhap ten"
                                   })
                                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                                            <p class="help-block"> Nhập họ tên Đầy đủ, Capital từng từ</p>
                                        </div>
                                        <div class="form-group">
                                            <label>ID Student</label>
                                            @*<input class="form-control" placeholder="Enter text" type="text" name="IdStudent">*@
                                            @Html.TextBoxFor(model => model.IdStudent, new
                                   {
                                       @class = "form-control",
                                       placeHolder = "nhap ID"
                                   })
                                            @Html.ValidationMessageFor(model => model.IdStudent, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            @*<input class="form-control" placeholder="email@example.com" type="text" name="Email">*@
                                            @Html.TextBoxFor(model => model.Email, new
                                   {
                                       @class = "form-control",
                                       placeHolder = "Exmpla@gmail.com"
                                   })
                                            @Html.ValidationMessageFor(model => model.IdStudent, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label>File Image input </label>
                                            @*<input type="file" name="FileImage">*@
                                            @Html.TextBoxFor(model => model.FileImage, new
                                   {
                                       @class = "form-control",
                                       type = "file"
                                   })
                                        </div>
                                        <div class="form-group">
                                            <label>Note </label>
                                            <textarea class="form-control" rows="3" name="Note"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>We are Known by</label>
                                            <div class="checkbox">
                                                <label>
                                                    @*<input type="checkbox" value="Television" name="Check1">Television*@
                                                    @Html.CheckBoxFor(model => model.Check1) Television
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    @*<input type="checkbox" value="Website" name="Check2">Website*@
                                                    @Html.CheckBoxFor(model => model.Check2) Website
                                                </label>
                                            </div>
                                            <div class="checkbox">
                                                <label>
                                                    @*<input type="checkbox" value="NewsPaper" name="Check3">NewsPaper*@
                                                    @Html.CheckBoxFor(model => model.Check3) NewsPaper
                                                </label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Choose Work Study</label>
                                            @*<div class="radio">
                                                    <label>
                                                        <input type="radio" name="ChooseWorkTime" id="optionsRadios1" value="1" checked>Morning (2 - 4 - 6)
                                                    </label>
                                                </div>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="ChooseWorkTime" id="optionsRadios2" value="2">Afternoon (2 - 4 - 6)
                                                    </label>
                                                </div>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="ChooseWorkTime" id="optionsRadios3" value="3">Morning (3 - 5 - 7)
                                                    </label>
                                                </div>
                                                <div class="radio">
                                                    <label>
                                                        <input type="radio" name="ChooseWorkTime" id="optionsRadios4" value="4">Afternoon (3 - 5 - 7)
                                                    </label>
                                                </div>*@
                                            <label>@Html.RadioButtonFor(model => model.ChooseWorkTime, "1")Morning (2 - 4 - 6))</label><br />
                                            <label>@Html.RadioButtonFor(model => model.ChooseWorkTime, "2")Afternoon (2 - 4 - 6))</label><br />
                                            <label>@Html.RadioButtonFor(model => model.ChooseWorkTime, "3")Morning (3 - 5 - 7))</label><br />
                                            <label>@Html.RadioButtonFor(model => model.ChooseWorkTime, "4")Afternoon (3 - 5 - 7))</label><br />



                                        </div>

                                        <div class="form-group">
                                            <label>Selects an course </label>
                                            @*<select class="form-control" name="SelectCourse">
                                                    <option value="1">1. Html CSS Boottrap</option>
                                                    <option value="2">2. JavaScript </option>
                                                    <option value="3">3. WebForm</option>
                                                    <option value="4">4. ASP.Net MVC </option>
                                                    <option value="5">5. Web Services</option>
                                                </select>*@
                                            @Html.DropDownListFor(model => model.SelectCourse, new List<SelectListItem>{
                                       new SelectListItem{Text="1. Html CSS Boottrap",Value="1"},
                                       new SelectListItem{Text="2. JavaScript",Value="2"},
                                       new SelectListItem{Text="3. WebForm",Value="3"},
                                       new SelectListItem{Text="4. ASP.Net",Value="4"},
                                       new SelectListItem{Text="5. Web Services",Value="5"}
                                   }, "Select an course", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.SelectCourse, "", new { @class = "text-danger" })
                                        </div>

                                        <button type="submit" class="btn btn-default">Submit Button</button>
                                        <button type="reset" class="btn btn-default">Reset Button</button>
                                    </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->




        <script src="/Assets/js/jquery-1.10.2.js"></script>
        <script src="/Assets/js/bootstrap.min.js"></script>
        <script src="/Assets/js/plugins/metisMenu/jquery.metisMenu.js"></script>

        <!-- Page-Level Plugin Scripts - Forms -->
        <!-- SB Admin Scripts - Include with every page -->
        <script src="/Assets/js/sb-admin.js"></script>

        <!-- Page-Level Demo Scripts - Forms - Use for reference -->}}
</body>
</html>
